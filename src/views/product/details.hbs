                    <span class="ms-2">0</span>
                </div>
                <div class="d-flex align-items-center" style="font-size: 15px;">
                    <span class="text-nowrap">2 <i class="fas fa-star pe-1 text-warning"></i></span>
                    <div class="progress w-100" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuemin="0"
                            aria-valuemax="100"></div>
                    </div>
                    <span class="ms-2">0</span>
                </div>
                <div class="d-flex align-items-center" style="font-size: 15px;">
                    <span class="text-nowrap">1 <i class="fas fa-star pe-1 text-warning"></i></span>
                    <div class="progress w-100" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuemin="0"
                            aria-valuemax="100"></div>
                    </div>
                    <span class="ms-2">0</span>
                </div>
            </div>
            <div class="col">
                <div class="d-flex flex-column justify-content-center align-items-center h-100">
                    <button class="btn btn-primary">
                        <i class="fa-regular fa-stars"></i> Gửi đánh giá của bạn
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


{{!-- Modal xem chi tiết cấu hình sản phẩm --}}
<div class="modal fade" id="modal-product-cfg" tabindex="-1" aria-labelledby="modal-product-cfg" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header text-bg-danger">
                <h1 class="modal-title fs-5" id="modal-product-cfg">Thông số kỹ thuật</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table id="tbl-product-cfg" class="table table-striped table-borderless m-0">
                    <tbody></tbody>
                </table>
                <textarea id="txt-product-cfg" class="form-control d-none">{{product.DeviceCfg}}</textarea>
            </div>
            <div class="modal-footer bg-secondary-subtle">
                <button type="button" class="btn btn-danger w-100" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>


<script src="/js/product.js"></script>