<div class="row bg-white rounded">
    <div class="col-4">
        <img src="/{{product.Image}}" alt="Logo" class="w-100">
    </div>

    <div class="col-8 p-4 border-start">
        <strong class="d-flex mt-3 mb-2 fs-4">{{product.ProdName}}</strong>
        <span id="product-slugs" class="d-none">{{product.Slugs}}</span>
        <div class="d-flex align-items-center mb-3">
            <span class="text-warning">{{productRating.Average}} <i class="fa-sharp fa-solid fa-star"></i></span>
            <a href="#product-review"
                class="ms-2 link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover">
                Xem đánh giá</a>
        </div>
        <div class="d-flex align-items-center mb-4">
            <strong class="fs-3 text-danger">{{formatNumToCurrency product.FinalPrice}}₫</strong>
            <p class="ms-3 text-decoration-line-through fw-bold fs-5 text-secondary">
                {{formatNumToCurrency product.Price}}₫</p>
            <button class="btn btn-sm text-danger border border-danger ms-3 pt-0 pb-0"
                style="font-size: 13px;width: 50px;">-{{product.Discount}}%</button>
        </div>
        <div class="card border-danger-subtle mb-3">
            <div class="card-header text-danger bg-danger-subtle border-danger-subtle">
                <i class="fa-regular fa-gift"></i>
                <strong class="ms-2" style="font-size: 18px;">Quà tặng khuyến mãi</strong>
            </div>
            <div class="card-body pt-2 pb-2">
                <a href="#" class="d-flex align-items-center link-app">
                    <span class="badge rounded-pill bg-danger">1</span>
                    <p class="ms-2">Tặng ngay <span class="text-danger fw-bold">1</span> x <span
                            class="text-danger fw-bold">Đế tản nhiệt Cooler
                            Master Notepal C3</span> trị giá <span class="text-danger fw-bold">230.000đ</span></p>
                </a>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-8">
                <button class="btn btn-danger w-75 h-100">
                    <span class="fw-bold fs-5">MUA NGAY</span>
                    <p style="font-size: 14px;">(Giao tận nơi hoặc nhận tại cửa hàng)</p>
                </button>
            </div>
            <div class="col-4">
                <div>
                    <p>✔ Bảo hành chính hãng 24 tháng</p>
                    <p>✔ Hỗ trợ đổi mới trong 7 ngày</p>
                    <p>✔ Miễn phí giao hàng toàn quốc</p>
                </div>
            </div>
        </div>
        <hr>
        <div class="d-flex align-items-center mb-3 fs-5 fw-bold">
            <strong class="text-danger">Hỗ trợ trả góp MPOS (Thẻ tín dụng), HDSAIGON</strong>
            <a href="#"
                class="ms-2 link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover">(Xem
                chi tiết)</a>
        </div>
        <div class="card border-secondary-subtle">
            <div class="card-header bg-secondary-subtle border-secondary-subtle">
                <strong class="ms-2" style="font-size: 18px;">Khuyến mãi</strong>
            </div>
            <div class="card-body pt-2 pb-2">
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-badge-check text-success"></i>
                    <strong class="ms-2">Giảm 500.000₫ khi nâng cấp RAM cho laptop gaming. (<a href="#"
                            class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover">Xem
                            thêm</a>)</strong>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-between mt-3">
    {{!-- Nội dung sản phẩm --}}
    <div class="col-7 bg-white rounded">
        <div class="position-relative pt-4 pb-4 ps-2 pe-2">
            <div id="product-content" class="overflow-hidden">
                {{{product.Content}}}
            </div>

            <div class="show-more-content">
                <button id="btn-show-more" class="btn btn-show-more">Đọc tiếp bài viết
                    <i class="fa-solid fa-chevron-down"></i>
                </button>
            </div>
        </div>
    </div>

    {{!-- Nội dung bên --}}
    <div class="col-4 p-0" style="width: 40.5%;">
        <div id="sidebar-product-details">
            {{!-- Cấu hình sản phẩm --}}
            {{#if product.SimpleDeviceCfg}}
            <div class="p-4 bg-white rounded mb-3">
                <strong class="d-block fs-4 text-center mb-3">Cấu hình sản phẩm</strong>
                <div class="border p-1 rounded">
                    <table class="table table-striped table-borderless m-0">
                        <tbody>
                            {{#each product.SimpleDeviceCfg}}
                            <tr>
                                <td>{{{@key}}}</td>
                                <td>{{{this}}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <button id="btn-show-product-cfg" class="btn btn-outline-primary w-100 mt-2" data-bs-toggle="modal"
                    data-bs-target="#modal-product-cfg">Xem chi tiết cấu hình ▶</button>
            </div>
            {{/if}}

            {{!-- Các sản phẩm tương tự --}}
            {{#if productSimilar}}
            <div class="p-4 bg-white rounded mb-3">
                <strong class="d-block fs-4 text-center mb-3">Sản phẩm tương tự</strong>
                <div>
                    {{#each productSimilar}}
                    <div class="card border-0">
                        <div class="row g-0">
                            <div class="col-4">
                                <a href="{{this.Slugs}}" class="d-block w-100">
                                    <img src="/{{this.Image}}" class="p-2 w-100" alt="Logo" style="height: 125px;">
                                </a>
                            </div>
                            <div class="col-8">
                                <div class="p-2">
                                    <a href="{{this.Slugs}}"
                                        class="text-line-2 text-decoration-none fw-bold pointer text-black"
                                        style="font-size: 15px;">{{this.ProdName}}</a>
                                    <p class="text-secondary text-decoration-line-through" style="font-size: 15px;">
                                        {{formatNumToCurrency this.Price}}₫</p>
                                    <div class="d-flex align-items-center">
                                        <strong class="text-danger me-3">{{formatNumToCurrency
                                            this.FinalPrice}}₫</strong>
                                        <button
                                            class="btn btn-sm text-danger rounded-0 border border-danger bg-danger-subtle pt-0 pb-0"
                                            style="font-size: 11px;width: 50px;">-{{this.Discount}}%</button>
                                    </div>
                                    <div style="font-size: 12px;">
                                        <span class="text-warning">
                                            {{this.AverageRating}} <i class="fa-sharp fa-solid fa-star"></i>
                                        </span>
                                        <span class="ms-2">({{this.TotalRating}} đánh giá)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}

            {{!-- Các sản phẩm đã xem --}}
            {{#if productViewed}}
            <div class="p-4 bg-white rounded">
                <strong class="d-block fs-4 text-center mb-3">Đã xem gần đây</strong>

                <div>
                    {{#each productViewed}}
                    <div class="card border-0">
                        <div class="row g-0">
                            <div class="col-4">
                                <a href="{{this.Slugs}}" class="d-block w-100">
                                    <img src="/{{this.Image}}" class="p-2 w-100" alt="Logo" style="height: 125px;">
                                </a>
                            </div>
                            <div class="col-8">
                                <div class="p-2">
                                    <a href="{{this.Slugs}}"
                                        class="text-line-2 text-decoration-none fw-bold pointer text-black"
                                        style="font-size: 15px;">{{this.ProdName}}</a>
                                    <p class="text-secondary text-decoration-line-through" style="font-size: 15px;">
                                        {{formatNumToCurrency this.Price}}₫</p>
                                    <div class="d-flex align-items-center">
                                        <strong class="text-danger me-3">{{formatNumToCurrency
                                            this.FinalPrice}}₫</strong>
                                        <button
                                            class="btn btn-sm text-danger rounded-0 border border-danger bg-danger-subtle pt-0 pb-0"
                                            style="font-size: 11px;width: 50px;">-{{this.Discount}}%</button>
                                    </div>
                                    <div style="font-size: 12px;">
                                        <span class="text-warning">
                                            {{this.AverageRating}} <i class="fa-sharp fa-solid fa-star"></i>
                                        </span>
                                        <span class="ms-2">({{this.TotalRating}} đánh giá)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>

{{!-- Đánh giá sản phẩm --}}
<div id="product-review" class="row mt-3">
    <div class="bg-white rounded p-4">
        <strong class="fs-4">Đánh &amp; giá nhận xét {{product.ProdName}}</strong>
        <div class="row mt-3">
            <div class="col">
                <div class="d-flex flex-column justify-content-center align-items-center h-100">
                    <p id="product-rating-average" class="text-danger fw-bold fs-4">{{productRating.Average}}/5</span>
                    <div class="star-rating">
                        <i class="fas fa-star unrated"></i>
                        <i class="fas fa-star unrated"></i>
                        <i class="fas fa-star unrated"></i>
                        <i class="fas fa-star unrated"></i>
                        <i class="fas fa-star unrated"></i>
                    </div>
                    <p><strong>{{product.TotalRating}}</strong> đánh giá &amp; nhận xét</p>
                </div>
            </div>

            <div class="col">
                {{#each productRating.Rating}}
                <div class="d-flex align-items-center" style="font-size: 15px;">
                    <span class="text-nowrap">{{this.index}} <i class="fas fa-star pe-1 text-warning"></i></span>
                    <div class="progress w-100" style="height: 10px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: {{this.percent}}%"
                            aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <span class="ms-2">{{this.total}}</span>
                </div>
                {{/each}}
            </div>

            <div class="col">
                <div class="d-flex flex-column justify-content-center align-items-center h-100">
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-product-review">
                        <i class="fa-regular fa-stars"></i> Gửi đánh giá của bạn
                    </button>
                </div>
            </div>
        </div>

        {{#each productReview}}
        <hr class="mt-4 mb-4" style="opacity: 0.15">
        <div>
            <div class="d-flex">
                <strong>{{this.UserName}}</strong>
                <span class="ms-2 text-muted">{{formatDate this.AtCreate}}</span>
            </div>
            <div class="d-flex w-100">
                <div data-rating="{{this.Rating}}" class="userRating w-25 text-secondary">
                    <i class="fas fa-star "></i>
                    <i class="fas fa-star "></i>
                    <i class="fas fa-star "></i>
                    <i class="fas fa-star "></i>
                    <i class="fas fa-star "></i>
                </div>
                <div class="w-75">
                    <p>{{this.Comment}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


{{!-- Modal xem chi tiết cấu hình sản phẩm --}}
<div class="modal fade" id="modal-product-cfg" tabindex="-1" aria-labelledby="modal-product-cfg" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header text-bg-danger">
                <h1 class="modal-title fs-5" id="modal-product-cfg">Thông số kỹ thuật</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table id="tbl-product-cfg" class="table table-striped table-borderless m-0">
                    <tbody></tbody>
                </table>
                <textarea id="txt-product-cfg" class="form-control d-none">{{product.DeviceCfg}}</textarea>
            </div>
            <div class="modal-footer bg-secondary-subtle">
                <button type="button" class="btn btn-danger w-100" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

{{!-- Modal đánh giá sản phẩm --}}
<div id="modal-product-review" class="modal modal-xl fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="row">
                <div class="col-4 p-0 bg-danger rounded-start">
                    <div class="p-3">
                        <img src="/{{product.Image}}" alt="Logo" class="w-100 rounded">
                        <strong class="d-block text-center text-white mt-3">{{product.ProdName}}</strong>
                    </div>
                </div>

                <div class="col-8 ps-0">
                    <div class="d-flex justify-content-between align-items-center p-3">
                        <p>Đánh giá của bạn về: <strong>{{product.ProdName}}</strong></p>

                        <button class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <hr class="m-0">
                    <div class="d-flex justify-content-between align-items-center p-3">
                        <div class="d-flex align-items-center">
                            <strong class="me-3">Mức độ đánh giá*</strong>
                            <div id="rating-star" class="text-secondary pointer">
                                <i class="fas fa-star border p-1"></i>
                                <i class="fas fa-star border p-1"></i>
                                <i class="fas fa-star border p-1"></i>
                                <i class="fas fa-star border p-1"></i>
                                <i class="fas fa-star border p-1"></i>
                            </div>
                            <span id="rating-text" class="ms-2"></span>
                        </div>
                        <div class="d-flex align-items-center w-25 {{#if userInfo}}visually-hidden{{/if}}">
                            <label class="text-nowrap me-3 fw-bold ">Họ tên</label>
                            <input id="product-review-username" type="text" class="form-control"
                                placeholder="Nhập họ tên" value="{{userInfo.FullName}}">
                        </div>
                    </div>
                    <hr class="m-0">
                    <div class="p-3">
                        <label class="form-label fw-bold">Đánh giá</label>
                        <textarea id="product-review-comment" class="form-control" style="resize: none;" rows="3"
                            placeholder="Ví dụ: Tôi đã mua sản phẩm và cảm thấy rất hài lòng về nó..."></textarea>
                    </div>
                    <div class="p-3 w-50">
                        <label class="form-label fw-bold">Gửi ảnh</label>
                        <input type="file" class="form-control">
                    </div>
                    <div class="p-3 d-flex justify-content-end">
                        <button id="btn-product-review" class="btn btn-danger">Gửi đánh giá</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="/js/product.js"></script>