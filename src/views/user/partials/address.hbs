<div class="bg-white rounded p-3">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <p class="fw-bold fs-5">Địa Chỉ Nhận Hàng</p>
        <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#modal-address">+ Thêm địa chỉ
            mới</button>
    </div>

    <hr class="m-0">
    <turbo-frame id="address-container">
        {{#if address}}
        {{#each address}}
        <div class="d-flex justify-content-between mt-3">
            <div>
                <div class="d-flex align-items-center mb-2">
                    <strong class="me-3">{{this.FullName}}</strong>
                    {{#if this.IsDefault}}
                    <button class="btn btn-sm border-danger text-danger" style="font-size: 12px; padding: 2px 4px">Mặt
                        định</button>
                    {{/if}}
                </div>
                <p class="text-secondary text-line-1">{{this.AddressLine}}</p>
            </div>

            <div class="">
                <a class="d-block text-decoration-none link-hover-danger pointer text-end text-nowrap mb-2"
                    onclick="deleteAddress({{this.Id}})">Xoá</a>
                {{#if this.IsDefault}}
                {{else}}
                <button class="btn btn-sm btn-outline-primary text-nowrap" style="font-size: 12px; padding: 2px 4px"
                    onclick="setDefaultAddress({{this.Id}})">Đặt
                    làm mặt định</button>
                {{/if}}
            </div>
        </div>
        {{/each}}
        {{else}}
        <p class="mt-3 text-center">Chưa có địa chỉ nào được thêm, hãy thêm một cái!</p>
        {{/if}}
    </turbo-frame>
</div>


<div id="modal-address" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Địa chỉ nhận hàng</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3 fw-bold">Thông tin khách hàng</p>
                <div class="form-outline mb-3">
                    <input id="address-fullName" type="text" class="form-control" placeholder="Nhập Họ Tên">
                    <label>Nhập Họ Tên</label>
                </div>
                <div class="form-outline mb-3">
                    <input id="address-phoneNumber" type="text" class="form-control" placeholder="Nhập số điện thoại">
                    <label>Nhập số điện thoại</label>
                </div>

                <p class="mb-3 fw-bold">Địa chỉ</p>
                <div class="row">
                    <div class="col-6">
                        <select id="address-province" class="form-select mb-3">
                            <option selected>Chọn Tỉnh/Thành Phố</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <select id="address-district" class="form-select mb-3">
                            <option selected>Chọn Quận/Huyện</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <select id="address-ward" class="form-select mb-3">
                            <option selected>Chọn Phường/Xã</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <div class="form-outline mb-3">
                            <input id="address-street" type="text" class="form-control" placeholder="Số nhà, địa chỉ">
                            <label class="text-black">Số nhà, địa chỉ</label>
                        </div>
                    </div>
                </div>

                <p class="mb-3 fw-bold">Loại địa chỉ</p>
                <div class="d-flex align-items-center mb-3">
                    <div class="form-check">
                        <input id="address-type1" name="address-type" class="form-check-input pointer" value="Văn phòng"
                            type="radio">
                        <label for="address-type1" class="form-check-label pointer">Văn phòng</label>
                    </div>
                    <div class="form-check ms-3">
                        <input id="address-type2" name="address-type" class="form-check-input pointer" value="Nhà riêng"
                            type="radio" checked>
                        <label for="address-type2" class="form-check-label pointer">Nhà riêng</label>
                    </div>

                </div>

                <button id="btn-address-save" class="btn btn-danger w-100">HOÀN THÀNH</button>
            </div>
        </div>
    </div>
</div>